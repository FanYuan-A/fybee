page{
    display: flex;
    flex-direction: column;
    color:#3C2314;
}
/*列表父元素*/
.row{
    display: flex;
    flex-wrap:wrap;
    border:20rpx solid #fff;
    justify-content: space-between;
}
/*列表每一个小格子*/
.cakelist{
    display:flex;
    flex-direction: column;
    width:49%;
    height:420rpx;
    border:1px solid #ccc;
    box-shadow:0 0 8px #ccc;
    box-sizing: border-box;
    border-radius: 8px;
    margin-bottom: 20rpx;
}
/*图片*/
.cakelistimg{
    width:100%;
    height: 250rpx;
    border-radius: 8px;
}
/*信息部分*/
.cakeinfo{
    display: flex;
    flex-direction: column;
    justify-content:space-around;
}
/*标题*/
.caketitle{
    font-size:14px;
    line-height: 1.5;
    padding: 5rpx 20rpx;
}
/*价格*/
.cakeprice{
    font-size:14px;
    color: #ff0323;
    padding: 5rpx 20rpx;
}
/*评价*/
.cake-pj{
    display: flex;
    justify-content: space-between;
    font-size:12px;
    color:#bbb;
    padding:5rpx 20rpx;
}

.ell{
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.daodi{
  color: #888;
  font-size:14px;
  line-height:40px;
  text-align: center;
}
